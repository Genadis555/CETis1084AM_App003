<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.cetis108.cetis1084am_app003.MainActivity">

    <TextView
        android:id="@+id/TVtex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAceptar"
        android:layout_alignRight="@+id/btnAceptar"
        android:layout_below="@+id/btnAceptar"
        android:layout_marginTop="39dp"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/TVnum2"
        android:layout_alignStart="@+id/TVnum2" />

    <EditText
        android:id="@+id/EtxtNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TVnum1"
        android:layout_alignRight="@+id/EtxtNum2"
        android:layout_alignEnd="@+id/EtxtNum2" />

    <TextView
        android:id="@+id/TVnum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EtxtNum2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/EtxtNum2"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="SEGUNDO NUMERO" />

    <EditText
        android:id="@+id/EtxtNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/EtxtNum1"
        android:layout_toRightOf="@+id/TVnum2"
        android:layout_toEndOf="@+id/TVnum2" />

    <TextView
        android:id="@+id/TVnum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIMER NUMERO"
        android:layout_alignTop="@+id/EtxtNum1"
        android:layout_alignLeft="@+id/TVnum2"
        android:layout_alignStart="@+id/TVnum2"
        android:layout_alignBottom="@+id/EtxtNum1" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="Aceptar"
        android:text="Puchale" />

    <TextView
        android:id="@+id/TVresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/TVtex1"
        android:layout_alignLeft="@+id/TVtex1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/TVtex1"
        android:layout_alignStart="@+id/TVtex1"
        android:layout_marginBottom="30dp"
        android:textAlignment="center" />
</RelativeLayout>
